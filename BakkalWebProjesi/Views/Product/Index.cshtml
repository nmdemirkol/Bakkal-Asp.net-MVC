@model BakkalWebProjesi.ViewModels.ProductModels.ProductListClass
@{
    ViewBag.Title = "Ürünler";
}

<div class="products container">
    <div class="row ">
        <div class="col-md-12">
            <a href="/Product/ProductAdd" class="button">Yeni Ürün Ekle</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="products-filter">

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row products-items">
                @for (int i = 0; i < Model.productList.Count; i++)
                {

                    <div class="col-md-3">
                        <div class="item">
                            <!-- <img src="images/example_user.jpg" alt="">-->
                            <h1>@Model.productList[i].u_adi</h1>
                            <div class="row">
                                <div class="brand col-md-12"> Markası :  @Model.brandList.Find(s=>s.marka_id== Model.productList[i].marka_id).m_adi </div>
                                <div class="catagory  col-md-12"> Kategorisi : @Model.catagoryList.Find(s => s.kategori_id == Model.productList[i].kategori_id).k_adi  </div>
                            </div>
                            <div class="row">
                                <div class="stock  col-md-8"> Stok Sayısı : @Model.stockList.Find(s => s.stok_id == Model.productList[i].stok_id).s_adedi </div>
                                <div class="price  col-md-4"> @Model.productList[i].u_fiyat₺</div>
                            </div>
                            <div class="row">
                                <a href="/Product/ProductDetail?id=@Model.productList[i].urun_id" class="col-md-12 product-button"> Detay</a>
                                <a href="/Sales/SalesAdd?id=@Model.productList[i].urun_id" class="product-button col-md-12"> <i class="fas fa-plus"></i> Sat</a>

                            </div>

                        </div>
                    </div>

                }

            </div>
        </div>
