@model BakkalWebProjesi.ViewModels.UserModels.RoleClass
@{
    ViewBag.Title = "Rol Sil";
}

<div class="roles container">
    <div class="row ">
        <div class="col-md-12">
            <a  href="/Role/Index" class="button">Tüm Rolleri Gör</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="role-item">
                <div class="text">@Model.role.r_adi</div>
                
            </div>
            <div class="role-item">
                <div class="text">Bu rolü silmek istediğinize emin misiniz? <hr />
                 Bu role sahip <b> @Model.userCount </b>kullanıcı bulunmaktadır.<hr />
                  @if (@Model.userCount > 0)
                  { <p>İlk önce bu role sahip kullanıcıları silmeniz gerekmektedir.</p>}
                 </div>
                @if (@Model.userCount<=0)
                {
                    <div class="right">
                    <form action="/Role/RoleDelete" method="post" enctype="multipart/form-data">
                        <input hidden type="text" name="rol_id" id="id" value="@Model.role.rol_id" />
                        <input hidden type="text" name="r_adi" id="adi" value="@Model.role.r_adi" />

                        <button class="delete">
                            <i class="fas fa-trash-alt    "></i> Sil
                        </button>
                    </form>
                </div>

                }
    
            </div>

        </div>
    </div>
</div>
