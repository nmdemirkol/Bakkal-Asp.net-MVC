@model List<BakkalWebProjesi.Models.kategori>
@{
    ViewBag.Title = "Kategoriler";
}

<div class="roles container">
    <div class="row ">
        <div class="col-md-12">
            <a href="/Catagory/CatagoryAdd" class="button">Yeni Kategori Ekle</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-5">
            @for (int i = 0; i < Model.Count; i++)
            {

                <div class="role-item">
                    <div class="text">@Model[i].k_adi</div>
                    <div class="right">
                        <a href="/Catagory/CatagoryUpdate?id=@Model[i].kategori_id">
                            <div class="update"><i class="fas fa-edit"></i></div>
                        </a>
                        <a href="/Catagory/CatagoryDelete?id=@Model[i].kategori_id">
                            <div class="delete"><i class="fas fa-trash-alt"></i></div>
                        </a>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
