@model List<BakkalWebProjesi.Models.marka>
@{
    ViewBag.Title = "Markalar";
}

<div class="roles container">
    <div class="row ">
        <div class="col-md-12">
            <a href="/Brand/BrandAdd" class="button">Yeni Marka Ekle</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-5">
            @for (int i = 0; i < Model.Count; i++)
            {

                <div class="role-item">
                    <div class="text">@Model[i].m_adi</div>
                    <div class="right">
                        <a href="/Brand/BrandUpdate?id=@Model[i].marka_id">
                            <div class="update"><i class="fas fa-edit"></i></div>
                        </a>
                        <a href="/Brand/BrandDelete?id=@Model[i].marka_id">
                            <div class="delete"><i class="fas fa-trash-alt"></i></div>
                        </a>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
